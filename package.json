{
  "name": "lumina-code",
  "displayName": "Lumina Code",
  "description": "Color palette generator, accessibility scorer & code exporter.",
  "publisher": "RogerDev",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lumina-sidebar",
          "title": "Lumina Code",
          "icon": "media/lumina-icon.svg"
        }
      ]
    },
    "views": {
      "lumina-sidebar": [
        {
          "when": "view == luminaCode.sidebarView",
          "icon": "media/lumina-icon.svg",
          "type": "webview",
          "id": "luminaCode.sidebarView",
          "name": "Generador"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^4.2.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "colorthief": "^2.6.0"
  }
}